<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".Register">

    <TextView
        android:id="@+id/verifymsg2"
        android:layout_width="210dp"
        android:layout_height="104dp"
        android:layout_marginLeft="100dp"
        android:text="Email not verified!"
        android:visibility="gone"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="22dp" />

    <TextView
        android:id="@+id/accountType"
        android:layout_width="match_parent"
        android:layout_height="69dp"
        android:layout_marginTop="60dp"
        android:gravity="center"
        android:text="Buyer Account"
        android:textColor="@color/black"
        android:textSize="35dp" />


    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/profile_image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="180dp"
        android:src="@drawable/buyer"
        app:civ_border_color="#FF000000"
        app:civ_border_width="2dp" />

    <TextView
        android:id="@+id/accountName2"
        android:layout_width="210dp"
        android:layout_height="104dp"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="370dp"
        android:text="name"
        android:textColor="@color/black"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/accountEmail2"
        android:layout_width="210dp"
        android:layout_height="104dp"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="420dp"
        android:text="email"
        android:textColor="@color/black"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/acn"
        android:layout_width="210dp"
        android:layout_height="104dp"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="370dp"
        android:text="Name:"
        android:textColor="@color/black"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/acemail"
        android:layout_width="210dp"
        android:layout_height="104dp"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="420dp"
        android:text="Email:"
        android:textColor="@color/black"
        android:textSize="20dp" />


    <Button
        android:id="@+id/logout_btn2"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="500dp"
        android:backgroundTint="@color/black"
        android:text="Logout"
        android:textColor="#fff" />
    <Button
        android:id="@+id/verify_btn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="40dp"
        android:backgroundTint="#e7e7e7"
        android:text="Verify now"
        android:textColor="#000" />
</RelativeLayout>